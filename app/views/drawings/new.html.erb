<h1 class="page-title">drawing</h1>
<main class="new-drawing">

  <section class="drawing">
    <canvas id="new-drawing" ></canvas>

    <div class="drawing-controls">
      <div class="thickness">
        <canvas id="pen-example" width="40" height="30"></canvas>

        <label for="lineWidth">Pen Thickness:</label>
        <input type="range" id="lineWidth" min="1" max="30"
        value ="2" title="Line Width">

      </div>


      <div class="colour">
        <label for="lineColor">Pen Colour:</label>
          <input type="color" name="lineColor"  id="lineColor">
      </div>
      <div class="reset-drawing">
        <button id="reset" name="button">Clear Drawing</button>
      </div>
    </div>
  </section>

  <button  id="submit-drawing" class="hidden" >Submit Drawing</button>

  <div class="ref-photo photo-container">
    <%= image_tag @photo.picture.large.url , id:"ref-photo", data:{id:@photo.id}%>
    <div id="ref-dot"></div>
  </div>
</main>


<%= javascript_pack_tag 'drawing' %>
