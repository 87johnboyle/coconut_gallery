<%= link_to "Draw this!", "/photos/#{@photo.id}/drawings/new", class: "draw-this"%>

<% if !@photo.flagged_innapropriate %>
    <%= link_to "This photo is inappropriate", "/photos/#{@photo.id}", method: :patch, data: {confirm: "are you sure?"} %>
<% end %>
<%= image_tag @photo.picture.large.url %>

<ul>
<% for drawing in @photo.drawings %>
    <li>
        <%= image_tag drawing.picture.large.url %>
    </li>
<% end %>
</ul>
